@model IEnumerable<Ventas.Web.Models.Usuario.Response.UsuarioResponse>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-9">
        <h1>Usuarios</h1>
    </div>
    <div class="col-2">
        <br />
        <a class="btn btn-secondary" asp-action="Create">Nuevo Usuario</a>
    </div>
</div>

<table class="table pt-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsActivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsActivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdUsuario }) |
                    @Html.ActionLink("Details", "Details", new { id=item.IdUsuario }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.IdUsuario })
            </td>
        </tr>
}
    </tbody>
</table>
