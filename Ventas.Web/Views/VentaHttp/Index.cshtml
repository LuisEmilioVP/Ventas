@model IEnumerable<Ventas.Web.Models.Venta.BaseVentaModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-9">
        <h1>Venta Http</h1>
    </div>
    <div class="col-2">
        <br />
        <a class="btn btn-primary" asp-action="Create">Nueva Venta</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentoCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImpuestoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentoCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImpuestoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
            <td class="d-grid gap-2">
                    @Html.ActionLink("Editar", "Edit", new { id=item.IdVenta}, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalle", "Details", new { id=item.IdVenta }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.IdVenta }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
